<div class="container">
  <div class="form-group">
    <div class="w-50">
      <input type="text" name="title" class="form-control" readonly value="<%= h(@memo["title"]) if @memo %>">
    </div>
  </div>

  <div class="form-group">
    <div class="w-50">
      <textarea name="memo" class="form-control" id="exampleFormControlTextarea1" readonly rows="10"><%= h(@memo["memo"]) if @memo %></textarea>
    </div>
  </div>


  <div class="row">
    <div class="col-md-2">
      <a href="<%= "/memos/#{@memo["id"]}/edit" %>" class="btn btn-primary active new-link" role="button" aria-pressed="true">更新</a>
    </div>
    <div class="col-md-2">
      <form class="form-horizontal" action="/memos/<%= @memo["id"] %>" method="post">
        <div class="form-group">
          <div class="col-xs-5">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-secondary">削除</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
